<% include ../partials/header %> 
    <div class="container">
     <div class="row">
      <div class="formstyle">         
      <form action="/users/<%= user._id %>?_method=PUT" method="POST">
        <h2 class="form-signin-heading">Edit <%= user.username %>'s profile</h2>
      
        <div class="form-group">
          <label for="inputFirstName" class="sr-only">first name</label>
        <input type="text" id="inputFirstName" name="user[firstName]" class="form-control" value="<%= user.firstName %>" autofocus>
        </div> 
        <div class="form-group">
          <label for="inputLastName" class="sr-only">last name</label>
        <input type="text" id="inputLastName" name="user[lastName]" class="form-control" value="<%= user.lastName %>" autofocus>
        </div>
        <div class="form-group">
          <label for="inputEmail" class="sr-only">email</label>
        <input type="text" id="inputEmail" name="user[email]" class="form-control" value="<%= user.email %>" required autofocus>
        </div> 
        <div class="form-group">
          <label for="inputAvatar" class="sr-only">avatar</label>
        <input type="text" id="inputAvatar" name="user[avatar]" class="form-control" value="<%= user.avatar %>" autofocus>
        </div>
        <div class="form-group">
            <textarea class="textarea-description form-group" type="text" name="user[intro]" placeholder="<%= user.intro %>"></textarea>
        </div>    
           
        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
      </form>
       </div><!--div style -->
      </div><!-- row -->
    </div> <!-- /container -->
<% include ../partials/footer %> 