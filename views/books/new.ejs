<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add a new Book</h1>
        <div class="formstyle">
            <form action="/books" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text"  name="name" placeholder="Title">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text"  name="author" placeholder="Author">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text"  name="amazonLink" placeholder="Amazon Url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number"  name="price" placeholder="price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text"  name="image" placeholder="image Url">
                </div>
                <div class="form-group">
                    <textarea class="textarea-description form-group" type="text" name="description" placeholder="plot/description"></textarea>
                </div>
                <div class="from-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>  
                </div>
            </form>
            </div><!--formstyle -->
            <a href="/books">Go Back</a>
        </div>
        
        
    </div>
</div>
<% include ../partials/footer %>