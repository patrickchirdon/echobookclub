<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">edit <%= book.name %></h1>
        <div class="formstyle">
            <form action="/books/<%= book._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text"  name="book[name]" value="<%= book.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text"  name="book[author]" value="<%= book.author %>">
                </div>
                 <div class="form-group">
                    <input class="form-control" type="text"  name="book[amazonLink]" value="<%= book.amazonLink %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number"  name="book[price]" value="<%= book.price %>" min="0.1" step="0.1">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text"  name="book[image]" value="<%= book.image %>">
                </div>
                <div class="form-group">
                    <textarea class="textarea-description form-group" type="text" name="book[description]" value="<%= book.description %>"></textarea>
                </div>
                <div class="from-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>  
                </div>
            </form>
            <a href="/books">Go Back</a>
        </div>
        
        
    </div>
</div>
<% include ../partials/footer %>